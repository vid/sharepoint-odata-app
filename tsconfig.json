{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "types": ["chai", "mocha", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
